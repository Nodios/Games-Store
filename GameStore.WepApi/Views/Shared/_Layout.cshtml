<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/style.min.css" rel="stylesheet" />
</head>
<body ng-app="mainModule">
    <div ng-controller="NavigationController as nav" class="navigation">
        <div>
            <ul ng-repeat="menu in nav.menus">
                <!-- :: one way binding -->
                <li class="{{menu.active}}"><a ng-click="nav.setActive($index)">{{::menu.name}}</a></li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("scripts")

    <!-- Angular and dependencies -->
    @Scripts.Render("~/Scripts/angular.min.js")

    <!-- Modules -->
    @Scripts.Render("~/app/modules/mainModule.js")

    <!-- Controllers -->
    @Scripts.Render("~/app/controllers/NavigationController.js")
</body>
</html>
