<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameStore.WindowsApp.Resources">

    <Style TargetType="TextBlock" BasedOn="{StaticResource HeaderTextBlockStyle}" x:Key="MenuTextBlockStyle" x:Name="MenuTextBlockStyle">
        <Setter Property="Foreground" Value="#FF00FFE8"></Setter>
    </Style>
    <Style TargetType="TextBlock" BasedOn="{StaticResource SubheaderTextBlockStyle}" x:Key="NavigationTextBlockStyle" x:Name="NavigationTextBlockStyle">
        <Setter Property="Foreground" Value="#FF00FFE8"></Setter>
        <Setter Property="Margin" Value="0 0 50 0"></Setter>
    </Style>
   
    
</ResourceDictionary>

