<Page
    x:Name="pageRoot"
    x:Class="GameStore.WindowsApp.Views.AccountPage"
    DataContext="{Binding Account, Source={StaticResource Locator}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameStore.WindowsApp.Views"
    xmlns:common="using:GameStore.WindowsApp.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ineractivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d">
    
    <ineractivity:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{Binding LoadedCommand}"/>
        </core:EventTriggerBehavior>
    </ineractivity:Interaction.Behaviors>

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">User settings</x:String>
        <common:VisibilityConverter x:Key="VisibilityConverter"/>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Margin="39,59,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock x:Name="pageTitle" Text="{StaticResource AppName}" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left menu -->
            <StackPanel Orientation="Vertical" Grid.Column="1">
                <StackPanel Orientation="Horizontal" Margin="10 100 0 0">
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Username:" Margin="5 0 0 0" />
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}"  Text="{Binding User.UserName}"  Margin="10 0 0 0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10 10 0 0">
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Password:"  Margin="5 0 0 0"/>
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}"  Margin="10 0 0 0" Text="* * * * * *" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10 10 0 0">
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}"  Text="Email"  Margin="5 0 0 0"/>
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="{Binding User.Email}"  Margin="10 0 0 0"  />
                </StackPanel>
                <Button Margin="10 30 0 0" Style="{StaticResource AppButtonStyle}" Content="Change password" Command="{Binding ShowChangePasswordCommand}"/>
                <Button Margin="10 10 0 0"  Style="{StaticResource AppButtonStyle}" Content="Change email" Command="{Binding ShowChangeEmailCommand}"/>
            </StackPanel>

            <!-- Right menu -->
            <Grid Grid.Column="2">
                
                <!-- Change passord -->
                <StackPanel Orientation="Vertical" Width="200" HorizontalAlignment="Left" Margin="0 100 0 0"
                            Visibility="{Binding ShowChangePassword, Converter={StaticResource VisibilityConverter}}">
                    <TextBlock Text="Old password"/>
                    <PasswordBox Password="{Binding UserPassword,Mode=TwoWay}"/>
                    <TextBlock Text="New password" Margin="0 10 0 0"/>
                    <PasswordBox Password="{Binding NewPassword, Mode=TwoWay}"/>
                    <TextBlock Text="Confirm new password" Margin="0 10 0 0" />
                    <PasswordBox Password="{Binding ConfirmNewPassword,Mode=TwoWay}"/>
                    <Button Style="{StaticResource AppButtonStyle}" Margin="0 20 0 0" Command="{Binding SubmitPasswordCommand}">Submit</Button>
                </StackPanel>
                
                <!-- Change user name -->
                <StackPanel Orientation="Vertical" Width="200" HorizontalAlignment="Left" Margin="0 100 0 0"
                            Visibility="{Binding ShowChangeEmail, Converter={StaticResource VisibilityConverter}}">
                    <TextBlock Text="New email"/>
                    <TextBox PlaceholderText="new email" Text="{Binding NewEmail, Mode=TwoWay}"/>
                    <TextBlock Margin="0 10 0 0" Text="password"/>
                    <PasswordBox Password="{Binding ConfirmNewEmail,Mode=TwoWay}"/>
                    <Button Style="{StaticResource AppButtonStyle}" Content="Submit" Margin="0 20 0 0" 
                            Command="{Binding SubmitEmailCommand}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>

